/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "target": "ES2022",
    "useDefineForClassFields": false,
    "module": "CommonJS",
    "moduleResolution": "NodeNext",
    "types": ["jest", "node", "@testing-library/jest-dom"], // gives you .toBeInTheDocument() etc.
    "esModuleInterop": true,
    "allowJs": true
  },
  "files": ["setup-jest.ts"],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
